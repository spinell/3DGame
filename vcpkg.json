{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "dependencies": [
    {
      "name": "sdl3",
      "version>=": "3.1.6-preview#2",
      "default-features": false,
      "features": ["x11", "wayland", "ibus", "alsa"],
      "platform": "linux"
    },
    {
      "name": "sdl3",
      "version>=": "3.1.6-preview#2",
      "features": [ "vulkan" ]

    },
    {
      "name": "spdlog-stdformat",
      "version>=": "1.15.0"
    },
    {
      "name": "imgui",
      "features": ["docking-experimental", "opengl3-binding", "sdl3-binding", "sdl3-renderer-binding", "wchar32"],
      "version>=": "1.91.5"
    },
    "vulkan-memory-allocator",
    "spirv-reflect"
  ],
  "overrides": [
    { "name": "vulkan-memory-allocator", "version": "3.1.0" },
    { "name": "spirv-reflect",           "version": "1.4.304.0" }
  ],
  "features": {
    "tests": {
      "description": "Build tests",
      "dependencies": [
        {
          "name": "gtest"
        }
      ]
    }
  }
}
